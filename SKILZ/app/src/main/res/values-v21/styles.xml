<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:activatedBackgroundIndicator">@drawable/background_list</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- enable overlapping of exiting and entering activities-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@color/red</item>
        <item name="android:textColor">@color/whitish</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">@color/whitish</item>
        <item name="android:background">@color/black</item>
    </style>

</resources>