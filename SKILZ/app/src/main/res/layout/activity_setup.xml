<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hazelwood.skilz.Setup.SetupActivity"
    android:weightSum="10">

    <ImageView
        android:layout_weight="1"
        android:src="@drawable/skilz_text"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/setup_one"
        android:layout_weight="8"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center">
            <EditText
                android:imeOptions="actionNext"
                android:hint="First"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <EditText
                android:imeOptions="actionNext"
                android:hint="Last"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <EditText
                android:imeOptions="actionNext"
                android:hint="Age"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <EditText
                android:imeOptions="actionNext"
                android:hint="Height"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <EditText
                android:imeOptions="actionNext"
                android:hint="Weight"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <EditText
                android:imeOptions="actionNext"
                android:hint="Email"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/setup_two"
        android:layout_weight="8"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp">

        <GridView
            android:padding="30dp"
            android:numColumns="2"
            android:id="@+id/sport_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/setup_three"
        android:layout_weight="8"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="50dp"
        android:layout_height="0dp">

        <ListView
            android:dividerHeight="0dp"
            android:id="@+id/skill_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <Button
        android:text="next"
        android:id="@+id/setup_button"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>
