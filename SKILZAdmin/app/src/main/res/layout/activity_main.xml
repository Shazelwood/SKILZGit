<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:padding="20dp"
        android:src="@drawable/skilz_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="20dp"
        android:fontFamily="sans-serif-regular"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Welcome to SKILZ Admin, here you will be able to add Content to SKILZ. Only you have access to your submissions. Please make sure you give as much credit to the website and author."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/main_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
