<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/black</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/black</item>
        <!--<item name="android:colorAccent"-->
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/whitish</item>
        <item name="android:windowBackground">@color/whitish</item>
        <item name="android:colorControlActivated">@color/red</item>
        <item name="android:textColorSecondary">@color/red</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/red</item>
        <item name="android:textColor">@color/whitish</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">@color/whitish</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="SpinnerItemTheme" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:color">@color/red</item>
    </style>
</resources>